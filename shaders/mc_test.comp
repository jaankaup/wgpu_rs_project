    cube.normals[6] = vec4(calculate_normal(p6), 0.0);
    cube.normals[7] = vec4(calculate_normal(p7), 0.0);

    const uint OFFSET = 5;

    // Create triangles and save them to destination array (mc_out[]).
    for (uint i=0 ; i<5 ; i++) {

