    vec3 p0 = position;
    vec3 p3 = position + vec3(0.0           , cube_length   , 0.0);
    vec3 p2 = position + vec3(cube_length   , cube_length   , 0.0);
    vec3 p1 = position + vec3(cube_length   , 0.0           , 0.0);
    vec3 p4 = position + vec3(0.0           , 0.0           , cube_length);
